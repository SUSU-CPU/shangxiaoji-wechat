/* miniprogram/pages/Accredit/Accredit.wxss */
.header {
  margin: 90rpx auto;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
  margin:0 auto;
  border-radius:30rpx;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}
.accredit{
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
}