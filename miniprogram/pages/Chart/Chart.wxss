/* miniprogram/pages/Chart/Chart.wxss */
.chart{
  width:100%;
  height:100%;
}
.chart-nav{
  width:calc(100% - 20rpx);
  height:100rpx;
  padding:10rpx;
}
.account-type{
  width:100%;
  height:100%;
  margin: 0 auto;
}
.account-time{
  width:216rpx;
}
.type-box{
  width:220rpx;
  height:56rpx;
  margin:20rpx auto 0;
  border:2px solid #19ab83;
  background-color: #F6F6F6;
  border-radius:20rpx;
  overflow: hidden;
}
.type-box .active{
  color:#fff;
  background:#19ab83;
  font-weight: bold;
}
.type-item{
  width:50%;
  text-align: center;
  line-height: 56rpx;
  color:#19ab83;
  
}
.radio{
  margin-left:20rpx;
  margin-top:5rpx;
  line-height: 26px;
  color:#19ab83;
  font-size: 28rpx;
}

.radio .active{
  background-color:#19ab83;
  font-weight: bold;
  display: block;
}
.radius-check{
  display: inline-block;
  width:10rpx;
  height:10rpx;
  border-radius:50%;
  overflow: hidden;
  border:1px solid #19ab83;
  margin-right:10rpx;
  margin-top:20rpx;
}
.imgs{
  display: none;
}
.pie-chart{
  width:100%;
  position: relative;
}
.pie-canvas{
  width:100%;
  
}
.notData{
  width:100%;
  height:600rpx;
  text-align: center;
  line-height: 600rpx;
  color:#838383;
}
.canvas{
  width:750rpx;
  height:530rpx;
  background:#fff;
}
.progress{
  width:calc(100% - 40rpx);
  margin-top:20rpx;
  padding:20rpx;
  background:#fff;
}
.progress-top{
  width:calc(100% - 20rpx);
  padding:10rpx;
  font-size:26rpx;
  color:#838383;
}
.progress-bottom{
  width:calc(100% - 20rpx);
  padding:10rpx;
}
.left-img{
  width:70rpx;
  height:70rpx;
  padding:15rpx;
  border:1px solid #19ab83;
  border-radius:50%;
  overflow: hidden;
}
.right-content{
  width:calc(100% - 120rpx);
  height:100rpx;
  padding:10rpx 0;
  border-bottom:1px solid #D6D6D6;
  display: flex;
}
.progress-title{
  width:75%;
}
.progress-total{
  width:25%;
  text-align: right;
  line-height: 100rpx;
  color:#838383;
}
.progress-type,.progress-plan{
  height: 50%;
}
.progress-type{
  font-size:26rpx;
  font-weight:bold;
  line-height: 50rpx;
}
.floor{
  width:90%;
  height:15rpx;
  position: relative;
  top:15rpx;
  background:#F2F0F0;
  border-radius:10rpx;
  overflow: hidden;
}
.layer{
  height:100%;
  /* background:#19ab83; */
  transition: width 2s;
  border-radius:10rpx;
}
.total{
  text-align: right;
}