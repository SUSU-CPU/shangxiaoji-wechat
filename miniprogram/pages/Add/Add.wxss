/* miniprogram/pages/Add/Add.wxss */
.add-account {
  width: 100%;
  height: 100%;
}

.account-top {
  width: calc(100% - 40rpx);
  height: 100rpx;
  padding: 20rpx;
  background-color: #19ab83;
}

.cut-box {
  width: 300rpx;
  height: 58rpx;
  border: 2px solid #fff;
  border-radius: 15px;
  margin: 0 auto;
  position: relative;
  top: 18rpx;
  line-height: 58rpx;
  overflow: hidden;
  color: #fff;
}

.type {
  width: 50%;
  text-align: center;
}

.active {
  background: #fff;
  color: #19ab83;
  font-weight: bold;
}

.swiper {
  width: calc(100% - 40rpx);
  padding: 20rpx;
  height: 360rpx;
}

.swiper-box{
  width:100%;
  height:100%;
}
.swiper-item {
  width:100%;
  height: calc(100% - 40rpx);
  padding:20rpx 0;
  background-color: #fff;
  border-radius:20rpx;
  overflow: hidden;
}
.swiper-item .list:nth-child(5n){
  margin-right:0;
}
.list {
  width: 120rpx;
  transition: transform .2s;
  margin-bottom:20rpx;
  margin-right:27rpx;
}
.list-img{
  width:66rpx;
  height:66rpx;
  margin:0 auto 20rpx;
  padding:10rpx;
  border:1px solid #19ab83;
  border-radius:50%;
}
.list-text{
  text-align: center;
  font-size:27rpx;
}
.title-item.active{
  background-color: #FEDB5B;
}
.account-type{
  width:calc(100% - 80rpx);
  margin:0 20rpx 20rpx;
  padding:20rpx;
  background-color:#fff;
  border-radius:20rpx;
}
.account-title{
  padding:20rpx 0;
  border-bottom:1px solid #DEE0E0;
}

.account-tab{
  padding:20rpx 0;
}

.item-tab{
  width:calc(100% / 5 - 28rpx);
  padding:10rpx 5rpx;
  margin-right:20rpx;
  background:#F5F2F2;
  font-size:27rpx;
  text-align: center;
  border-radius: 25rpx;
}
.account-active{
  background-color: #19ab83;
  color:#fff;
  font-weight:bold;
}

.change-account{
  width:calc(100% - 40rpx);
  margin:0 20rpx 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.remark{
  line-height: 84rpx;
  padding-left:20rpx;
  font-size:28rpx;
}
.weui-input{
  padding:20rpx;
  color:#9094AA;
}
.swiper-item .active{
  font-weight:bold;
  color:#19ab83;
  transform: scale(1.05);
}
.submit{
  width:calc(100% - 40rpx);
  height:80rpx;
  margin:30rpx 20rpx 20rpx;
  background-color:#19ab83;
  text-align: center;
  line-height: 80rpx;
  color:#fff;
  font-size:36rpx;
  border-radius: 20rpx;
}


.header {
  margin: 90rpx auto;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
  margin:0 auto;
  border-radius:30rpx;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}
.accredit{
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
}